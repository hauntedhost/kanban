<header class="card_title">
	<h3>
		<span class="edit js-edit-card-title"><%= card.escape("title") %></span>
	</h3>
	<h4>In list <span><%= list.escape("title") %></span></h4>
</header>

<p>
	<%= card.escape("description") %>
</p>

<h4>Activity</h4>

<form id="add_comment">
  <textarea name="card_comment[content]"
  					class="card_comment_content"
  					placeholder="Write a comment"></textarea>
	<input type="submit" value="Comment" />
</form>

<ul class="card_comments">
<% comments.each(function (comment) { %>
	<% user = comment.get("user") %>
	<li>
		<article class="comment">
			<header>
				<!-- FIXME: on new comment this will be blank because not receiving users back -->
				<img src="<%= user.get("gravatar_url") %>" />
			</header>

			<a rel="author">Sean Omlor</a>

			<div class="content">
				<%= comment.escape("content") %>
			</div>

			<footer>
				<abbr class="timeago quiet" title="<%= comment.escape("created_at") %>"><%= comment.escape("created_at") %></abbr>
			</footer>
		</article>
	</li>
<% }); %>
</ul>

<section class="comments"></section>
<a href="#close-modal" rel="modal:close" class="close-modal-custom">Close</a>
